{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "ES2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "coverage", "tests/**/*.spec.ts"]
}
